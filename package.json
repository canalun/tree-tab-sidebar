{
  "name": "tree-tab-sidebar-for-chrome",
  "displayName": "Tree tab sidebar for chrome",
  "version": "0.0.1",
  "description": "Let's keep tabs tidy with tree-style sidebar!!",
  "author": "canalun",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "test": "plasmo test",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.5.0",
    "eslint": "^8.46.0",
    "plasmo": "0.82.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@types/chrome": "0.0.242",
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-react": "^7.33.0",
    "prettier": "^3.0.0",
    "typescript": "5.1.6"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "scripting",
      "sidePanel",
      "tabs"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {
      "default_title": "Click to open panel"
    }
  }
}
